                        vlp.on("changed.bs.select", function (e, clickedIndex, isSelected, oldValue) {
                            console.log(vlp.val());
                            var t = document.getElementById("datafinecantiereselezionato");
                            t.textContent += formatDate(tmp[indiceselezionato].endDate);
                            loadTurni(vlp.val())
                        });

                    }
                });

            //Date range as a button
            //Date range as a button
            $('#reservation').datepicker(
                {
                    format: "dd-mm-yyyy",
                    //dateFormat: "dd-mm-yyyy",
                    showOn: "button",
                    buttonText: '<i class="fa fa-calendar"></i>',                    
                    changeMonth: true,
                    changeYear: true,                    
                    todayBtn: "linked",
                    language: "it",
                    autoclose: true,
                    startDate: new Date(@wd.Day, @wd.Month, @wd.Year),
                },
            ).on('changeDate', function (e) {                                                
                var year  = e.date.getFullYear();
                var month = (e.date.getMonth() + 1).toString().padStart(2, "0");
                var day   = e.date.getDate().toString().padStart(2, "0");                
                $('#reservationen').val(month+"-"+day+"-"+year);
                $('#reservation').val(day+"-"+month+"-"+year);                
                $('#formreservation').submit();
            });

            //Date range as a button
                $('#date_event').datepicker(
                    {
                        //maxDate: '+1m',
                        dateFormat: "dd-MM-yyyy",
                        showOn: "button",
                        buttonText: '<i class="fa fa-calendar"></i>'
                    },
                );

            $('#table1 thead tr').clone(true).appendTo('#table1 thead');
            $('#table1 thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                if (!$(this).hasClass("hide-search")) {
                    $(this).html('<input type="text" placeholder="Cerca ' + title + '" />');
                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                }
            });
            var groupColumn = 4;
            var table = $('#table1').DataTable({
                ajax: '/RelTurnoUserS/ajaxProjectCantiereTurno?WorkDate=@dtenfull',
                "columnDefs": [
                    { "visible": false, "targets": groupColumn },
                    { "visible": true, "targets": 0 },
                    { "width": '50px', "targets": 0 },
                    { "width": '50px', "targets": 3 },
                ],
                "order": [[groupColumn, 'asc']],
                columns: [
                    {
                        "data": null,
                        "name": "Immagine",
                        "render": function (data, type, row) {
                            return '<img src="/Users/getProfilePicture?id=' + row.id + '" style="height:50px;width:50px;border: 1px solid;border-radius:50%;" />';
                        }
                    },                    
                    { "data": "lastName" },
                    { "data": "firstName" },
                    //{ "data": "email" },

                    {
                        "data": 'id',
                        "name": "",
