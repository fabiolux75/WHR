@model LoocERP.ViewModels.EditUserViewModel
<div class="active tab-pane" id="settings">
    <form enctype="multipart/form-data" asp-controller="Users" asp-action="edit"
          method="post" class="mt-3">
        <input type="hidden" name="tab" value="edit_looc" />
        <input type="hidden" name="type" value="@ViewBag.type" />
        <div class="form-group row ">
            <label asp-for="@Model.User.TipoPatente" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.User.TipoPatente" class="form-control" />
                <span asp-validation-for="@Model.User.TipoPatente" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.User.NumeroPatente" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.User.NumeroPatente" class="form-control" />
                <span asp-validation-for="@Model.User.NumeroPatente" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row" hidden>
            <label asp-for="@Model.User.Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.User.Id" class="form-control" placeholder="Id">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="@Model.User.CodiceCartaCarb" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.User.CodiceCartaCarb" class="form-control" />
                <span asp-validation-for="@Model.User.CodiceCartaCarb" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="@Model.User.NfcCode" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="@Model.User.NfcCode" class="form-control" />
                <span asp-validation-for="@Model.User.NfcCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="@Model.enableEsecutore">
                    <label class="custom-control-label" for="customSwitch1">Piattaforma di Logistica di supporto: abilita l'utente come esecutore</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="customSwitch2" asp-for="@Model.isParking">
                    <label class="custom-control-label" for="customSwitch2">Utente abilitato al parcheggio.</label>
                </div>
            </div>
        </div>

        <div class="col-12 text-right">
            <!--button onclick="history.back()" class="btn btn-default">Annulla</!-button-->
            <button type="submit" class="btn btn-danger">Aggiorna</button>
        </div>
    </form>
</div>