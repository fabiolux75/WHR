@model LoocERP.ViewModels.EditUserViewModel

<div class="active tab-pane" id="altre-info">
    <form enctype="multipart/form-data" asp-controller="Users" asp-action="edit"
          method="post" class="mt-3">
        <input type="hidden" name="tab" value="edit_altreinformazioni" />
        <input type="hidden" name="type" value="@ViewBag.type" />
        <input type="hidden" asp-for="@Model.User.Id" class="form-control">
        <div class="row m-0">
            <div class="form-group col-12">
                <label asp-for="@Model.User.IBAN"></label>
                <input asp-for="@Model.User.IBAN" class="form-control" />
                <span asp-validation-for="@Model.User.IBAN" class="text-danger"></span>
            </div>

            <div class="form-group col-6">
                <label asp-for="@Model.User.StimaOraria"></label>
                <input min=0 type="number" step="0.01" asp-for="@Model.User.StimaOraria" class="form-control" />
                <span asp-validation-for="@Model.User.StimaOraria" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="@Model.User.StimaOrariaStraordinaria"></label>
                <input min=0 type="number" step="0.01" asp-for="@Model.User.StimaOrariaStraordinaria" class="form-control" />
                <span asp-validation-for="@Model.User.StimaOrariaStraordinaria" class="text-danger"></span>
            </div>
            <div class="form-group col-6 ">
                <label asp-for="@Model.User.StimaOrariaGalleria"></label>
                <input min=0 type="number" step="0.01" asp-for="@Model.User.StimaOrariaGalleria" class="form-control" />
                <span asp-validation-for="@Model.User.StimaOrariaGalleria" class="text-danger"></span>
            </div>
            <div class="form-group col-6 ">
                <label asp-for="@Model.User.StimaOrariaNotturna"></label>
                <input min=0 type="number" step="0.01" asp-for="@Model.User.StimaOrariaNotturna" class="form-control" />
                <span asp-validation-for="@Model.User.StimaOrariaNotturna" class="text-danger"></span>
            </div>
            <div class="form-group col-12 ">
                <label asp-for="@Model.User.matricola"></label>
                <input asp-for="@Model.User.matricola" class="form-control" />
                <span asp-validation-for="@Model.User.matricola" class="text-danger"></span>
            </div>
            <div class="form-group col-12 ">
                <label asp-for="@Model.User.Note"></label>
                <input asp-for="@Model.User.Note" class="form-control" />
                <span asp-validation-for="@Model.User.Note" class="text-danger"></span>
            </div>
        </div>
        <div class="group-location location-residence col-12 row">
            <hr class="col-12" />
            <h4 class="col-12">Gestione ordine da fornitori</h4>
            <div class="row col-12 mt-3">
                <div class="form-group col-3">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="customSwitch99" asp-for="@Model.User.isEnabledSupplierOrderConfirm">
                            <label class="custom-control-label" for="customSwitch99">Abilitato alla gestione</label>
                        </div>
                </div>

                <div class="form-group col-6">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="switchBonifico" asp-for="@Model.User.isEnabledSupplierBonifico">
                            <label class="custom-control-label" for="switchBonifico">Abilitato ai bonifici</label>
                        </div>
                </div>

                <div class="form-group col-12">
                    <label asp-for="@Model.User.maxCostSupplierOrderConfirm"></label>
                    <input asp-for="@Model.User.maxCostSupplierOrderConfirm" class="form-control" />
                    <span asp-validation-for="@Model.User.maxCostSupplierOrderConfirm" class="text-danger"></span>
                </div>
            </div>
           
        </div>
        <div class="col-12 text-right">
            <!--button onclick="history.back()" class="btn btn-default">Annulla</!-button-->
            <button type="submit" class="btn btn-danger">Aggiorna</button>
        </div>
    </form>
</div>