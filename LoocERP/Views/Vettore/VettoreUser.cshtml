@section Scripts {
    <script>
        function format(d) {
            var newLine = '<div class="col-12"><div class="col-4"><table id="row_info_' + d.id + '" class="table table-bordered table-hover"><thead><tr><th>Targa</th><th>Data Riconsegna</th></tr>';

            for (var k = 0; k < d.vettori.length; k++) {
                newLine += '<tr>' +
                    '<td>' + d.vettori[k].targa + '</td>' +
                    '<td>' + d.vettori[k].endDate + '</td>' +
                    '</tr>';
            }

            newLine += '</thead><tbody></tbody></table></div></div>';

            return newLine;

        }


        function openModal(userid, fullname = "", CodiceVettore = null) {
            console.log(userid);
            console.log(fullname);
            console.log(CodiceVettore); //questa dovrà essere usata per un aggiornamento su db


            var empModal = $('#empModal');

            empModal.find(".modal-header .modal-title").html(fullname);//.html(data.data.nomeOperatore);
            empModal.find(".VettoreUserId").val(userid);
            // Add response in Modal body
            //$(".select2-uservettore").select2("val", ""); //svuoto valore selezionato

            // Display Modal
            empModal.modal('show');


        }

        function openModalParcheggio(userid,CodiceVettore = null,targa = "") {

            var empModal = $('#modalParcheggio');
            empModal.find(".CodiceVettore").val(CodiceVettore);
            empModal.find(".VettoreUserId_parking").val(userid);
            empModal.find(".modal-header .modal-title").html("Disassocia Targa: "+targa);
            empModal.modal('show');


        }


        function showParcheggi(self) {
            console.log(self.checked);
            if (self.checked) {
                table
                    .column(1)
                    .search("True")
                    .draw();
            } else {
                table
                    .column(1)
                    .search("")
                    .draw();
            }

        }


        function reloadTable() {

            var date = $("#dateSearch").val();
            var today = Date("@todaystring");
            var nDate = Date(date);

            var url = "/Vettore/ajaxUserVettore?isParking=@ViewBag.isParking&startTime=" + date;
            $('#vettori').DataTable().clear();
            $('#vettori').DataTable().destroy();

            $('#vettori thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                if (!$(this).hasClass("hide-search")) {
                    $(this).html('<input type="text" placeholder="Cerca ' + title + '" />');
                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                }
            });

            table = $('#vettori').DataTable({
                ajax: url,
                //"processing": true,
                //"serverSide": true,
                dom: 'Bfrtip',//dom: 'Bftp',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "columns": [
                    {
                        "data": null,
                        "name": "Immagine",
                        "render": function (data, type, row) {
                            //console.log(row);
                            return '<img src="/Users/getProfilePicture?id=' + row.id + '&v=' + row.dataModifica + '" style="height:50px;width:50px;border: 1px solid;border-radius:50%;" />';
                        }
                    },
                    { "data": "fullname" },
                    {
                        "data": null,
                        "name": "",
                        "render": function (data, type, row) {
                            return row.vettori.length;
                        }
                    },
                    {
                        "data": null,
                        "name": "",
                        "render": function (data, type, row) {

                            if (row.cantiere != null && row.cantiere.nomeCantiere != "")
                                return row.cantiere.nomeCantiere + " | " + row.cantiere.nomeTurno;
                            return "";
                        }
                    },
                    {
                        "data": null,
                        "name": "",
                        "render": function (data, type, row) {
                            if (row.cantiere != null && row.cantiere.nomeCantiere != "")
                                return "Y";
                            return "N";
                        }
                    },
                    @if ((await AuthorizationService.AuthorizeAsync(User, "VettoreUser.Edit")).Succeeded) {
                        @Html.Raw(@"{
                        ""data"": null,
                        ""name"": ""bb"",
                        ""render"": function(data, type, row) {
                                            var html = """";



                                            for (i = 0; i < row.vettori.length; i++)
                                            {
                                                html += ""<a class=\""targa\"" onclick=\""openModalParcheggio('"" + row.id + ""','"" + row.vettori[i].vettoreId + ""','"" + row.vettori[i].targa + ""');\"" hidden>""
                                                    + row.vettori[i].targa + ""</a>"";

                                            }

                                            html += "" <a onclick=\""openModal('"" + row.id + ""','"" + row.firstName + "" "" + row.lastName + ""');\"">""
                                                + ""<i class='fa fa-plus'></i><i class='fa fa-car'></i>"" + ""</a>"";

                                            return html;
                                        }
                                    },");
                    }




                    {
                        "className": 'details-control',
                        "orderable": false,
                        "data": null,
                        "defaultContent": '',
                        "name": "cc",
                        "render": function (data, type, row) {
                                    if (row.vettori.length > 0)
                                        return '<a><i class="fa fa-eye"></i></a>';
                                    return "";
                                }
                            },
                ],
                columnDefs: [
                    { width: '50px', targets: 0 },
                    { width: '50px', targets: 4 },
                    //  { targets: 2,render: $.fn.dataTable.render.moment('Do MMM YYYY') }
                ],
                rowsGroup: [
                    'bb:name',
                    'cc:name'
                ],
                "language": {
                    "sEmptyTable": "Nessun dato presente nella tabella",
                    "sInfo": "Vista da _START_ a _END_ di _TOTAL_ elementi",
                    "sInfoEmpty": "Vista da 0 a 0 di 0 elementi",
                    "sInfoFiltered": "(filtrati da _MAX_ elementi totali)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "Visualizza _MENU_ elementi",
                    "sLoadingRecords": "Caricamento...",
                    "sProcessing": "Elaborazione...",
                    "sSearch": "Cerca:",
                    "sZeroRecords": "La ricerca non ha portato alcun risultato.",
                    "oPaginate": {
                        "sFirst": "Inizio",
                        "sPrevious": "Precedente",
                        "sNext": "Successivo",
                        "sLast": "Fine"
                    },
                    "oAria": {
                        "sSortAscending": ": attiva per ordinare la colonna in ordine crescente",
                        "sSortDescending": ": attiva per ordinare la colonna in ordine decrescente"
                    }
                },
                initComplete: function () {
                            // Apply the search
                            this.api().columns().every(function () {
                                var that = this;
                        $('input', this.header()).on('keyup change clear', function () {
                                    if (that.search() !== this.value) {
                                        that
                                            .search(this.value)
                                            .draw();
                                    }
                                });
                            });
                        },
                "paging": true,
                "autoWidth": false,
                "responsive": true,
                orderCellsTop: true,
                fixedHeader: true
            });
            $('#vettori tbody').off('click', 'td.details-control');
            $('#vettori tbody').on('click', 'td.details-control', function () {
                var tr = $(this).closest('tr');
                var row = table.row(tr);

                if (row.data().vettori.length > 0) {
                    if (row.child.isShown()) {
                        row.child.hide();
                        tr.removeClass('shown');
                    }
                    else {
                        // Open this row
                        row.child(format(row.data())).show();
                        tr.addClass('shown');
                    }
                }


            });
        }


        $(document).ready(function () {
            $('.select2-uservettore').select2({
                placeholder: "Inserisci la targa",
                minimumInputLength: 3,
                ajax: {
                    url: '/Vettore/ajaxVettoreUser',
                    dataType: 'json',
                },
            });
            $('.select2-parkingSelect').select2({
                placeholder: "Inserisci nome parcheggio",
                minimumInputLength: 3,
                ajax: {
                    url: '/Vettore/ajaxParcheggio',
                    dataType: 'json',
                },
            });


            $('#assignVettoreUserForm').on("submit", function (e) {
                e.preventDefault(); // cancel the actual submit
                var elements = $(this).serializeArray();
                var data = [];
                jQuery.each(elements, function (i, elem) {
                    data[elem.name] = elem.value;
                });


                $.ajax({
                    url: '/Vettore/ajaxVettoreUserAssign',
                    type: 'post',
                    data: { UserId: data['UserId'], CodiceVettore: data['CodiceVettore'], StartDate: data['StartDate'], EndDate: data['EndDate'] },
                    success: function (data) {
                        console.log(data.data);

                        // Add response in Modal body
                        //Svuoto modale
                        var empModal = $('#empModal');
                        empModal.find(".modal-header .modal-title").html("");//.html(data.data.nomeOperatore);
                        $(".select2-uservettore").select2("val", ""); //svuoto valore selezionato
                        $('#empModal').modal('hide');
                    }
                });
            });



            $('#assignParkingForm').on("submit", function (e) {
                e.preventDefault(); // cancel the actual submit
                var elements = $(this).serializeArray();
                var data = [];
                jQuery.each(elements, function (i, elem) {
                    data[elem.name] = elem.value;
                });
                console.log(data);


                $.ajax({
                    url: '/Vettore/ajaxParking',
                    type: 'post',
                    data: { UserId: data['UserId'], CodiceVettore: data['CodiceVettore'], EndDate: data['EndDate'], parkingSelect: data['parkingSelect'] },
                    success: function (data) {
                        $('#modalParcheggio').modal('hide');
                        reloadTable();

                    }
                });


            });




            $('#vettori thead tr').clone(true).appendTo('#vettori thead');
            $('#vettori thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                if (!$(this).hasClass("hide-search")) {
                    $(this).html('<input type="text" placeholder="Cerca ' + title + '" />');
                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                }
            });


            reloadTable();



        });


    </script>

}
