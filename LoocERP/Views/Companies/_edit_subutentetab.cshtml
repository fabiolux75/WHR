@model LoocERP.ViewModels.EditCompanyViewModel

<section>
    <div class="card card-primary">
        <div class="card-body">
            <table id="users" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Cognome</th>
                        <th>Telefono</th>
                        <th>Contratto</th>
                        <th class="hide-search">Opzioni</th>
                    </tr>
                </thead>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</section>

@{
    var companysearch = "IdCompany=" + @Model.Company.ID;

    if (Model.Companies.Count() > 0)
    { //sono nel padre
        companysearch = "ParentID=" + @Model.Company.ID;
    }

}
