@model Cantiere

<div class="modal fade show" id="project-create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crea Cantiere</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-controller="Cantiere" asp-action="Create">
                <div id="edit_company_form" class="modal-body ">
                    <div class="row">
                        <input type="hidden" asp-for="@Model.ProjectId" value="@ViewBag.ProjectId" />
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="@Model.Codice"></label>
                                <input asp-for="@Model.Codice" class="form-control" placeholder="Codice Cantiere" />
                                <span asp-validation-for="@Model.Codice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="@Model.Name"></label>
                                <input asp-for="@Model.Name" class="form-control" placeholder="Nome Cantiere" />
                                <span asp-validation-for="@Model.Name" class="text-danger" ></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="@Model.StartDate"></label>
                                <input asp-for="@Model.StartDate" value="" class="form-control" />
                                <span asp-validation-for="@Model.StartDate" class="text-danger" value="@DateTime.Now" required></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="@Model.EndDate"></label>
                                <input asp-for="@Model.EndDate" value="" class="form-control" />
                                <span asp-validation-for="@Model.EndDate" class="text-danger" value="@DateTime.Now" required></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <small>* Data di Inizio e Fine Cantiere sono necessarie per l'assegnazione delle risorse.</small>
                        </div>
                        @*
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="@Model.Latitude"></label>
                                <input asp-for="@Model.Latitude" type=number class="form-control" />
                                <span asp-validation-for="@Model.Latitude" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-12" hidden >
                            <div class="form-group">
                                <label asp-for="@Model.Longitude"></label>
                                <input asp-for="@Model.Longitude" type=number class="form-control" />
                                <span asp-validation-for="@Model.Longitude" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="@Model.Round"></label>
                                <input asp-for="@Model.Round" type=number step="0.5" class="form-control" />
                                <span asp-validation-for="@Model.Round" class="text-danger"></span>
                            </div>
                        </div>
                        *@
                    </div>                    
                </div>                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary" onclick="sendAjaxRequest()">Salva</button>
                </div>
            </form>
        </div>
    </div>
</div>