@model LoocERP.Models.MansioneMacchina




<div class="modal fade" id="modalMansioni_moveTo" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Sposta Macchina</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="idMacchina_moveTo" name="idMacchina" />
                <div class="col-12">
                    <div class="form-group">
                        <label>Seleziona Mansione</label>
                        <select style="width:100%" id="idMansione_moveTo" name="idMansione" class="select2-parcheggiovettore form-control" required></select>
                    </div>
                </div>
                <button onclick="moveToForm()" class="btn btn-primary">Sposta macchina</button>
            </div>
        </div>
    </div>
</div>
<style>
    .map-content {
        height: 300px;
        width: 100%;
