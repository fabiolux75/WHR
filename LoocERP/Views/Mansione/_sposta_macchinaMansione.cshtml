    }

    span.select2-selection {
        min-height: 40px;
        width: 100% !important;
    }
</style>

<script>
    function openModalSpostaMansioniMacchinaTo(IdMacchina) {
        var empModal = $('#modalMansioni_moveTo');
        $("#idMacchina_moveTo").val(IdMacchina);
        empModal.modal('show');

        $('#idMansione_moveTo').select2({
            placeholder: "Inserisci nome mansione",
            minimumInputLength: 3,
            dropdownParent: $("#modalMansioni_moveTo"),
            ajax: {
                url: '/Mansione/ajaxMansioneList',
                dataType: 'json',

            },
        });
    }

    function moveToForm() {
        var idCar = $("#idMacchina_moveTo").val();
        var idMansione = $("#idMansione_moveTo").val();
        $.ajax({
            url: '/Mansione/ajaxMoveMacchinaMansione?idMacchina=' + idCar + "&idMansione=" + idMansione,
            type: 'get',
            success: function (data) {
                var empModal = $('#modalMansioni_moveTo');
                empModal.modal('hide');
                reloadTable();
            }
        });
    }

    (function () {

        

    })

    
</script>