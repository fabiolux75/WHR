                            </thead>
                        </table>


                    </div>

                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function deleteMansione(id) {
            $.ajax({
                url: '/Mansione/ajaxRemoveMansione?idMansione=' + id,
                type: 'get',
                success: function (data) {

                }
            });
        }

        $(document).ready(function () {


            $('#Noleggios thead tr').clone(true).appendTo('#Noleggios thead');
            $('#Noleggios thead tr:eq(1) th').each(function (i) {
                var title = $(this).text();
                if (!$(this).hasClass("hide-search")) {
                    $(this).html('<input type="text" placeholder="Cerca ' + title + '" />');
                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                }
            });


            $('table').on('click', '.edit-btn', function () {
                let rowData = $('table').DataTable().row($(this).closest('tr')).data();
                openModalMansioniEdit(rowData);
            });





            @if (!(await AuthorizationService.AuthorizeAsync(User, "mansione.Edit")).Succeeded) {
                @Html.Raw(@"var edit_mansioni = false;") 
            } else { 
                @Html.Raw(@"var edit_mansioni = true;")
            }


            @if (!(await AuthorizationService.AuthorizeAsync(User, "mansione.Edit")).Succeeded) {
                @Html.Raw(@"var delete_mansioni = false;") 
            } else { 
                @Html.Raw(@"var delete_mansioni = true;")
            }





            var table = $('#Noleggios').DataTable({
                ajax: "/Mansione/ajaxIndex",
                dom: 'Bfrtip',//dom: 'Bftp',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                "columns": [
                    { "data": "codice" },
                    { "data": "name" },
                    { "data": "descrizione" },
                    {
                        "data": null,
                        "name": "",
                        "render": function (data, type, row) {
                            var ret = '';

                            if (edit_mansioni)
                                ret += '<span class="edit_btn">' +
                                    '<a class="btn-sm" class="" href="/Mansione/Edit?MansioneId=' + row.id + '"><i class="fa fa-edit"></i></a>' +
                                    '</span>';
                            if (delete_mansioni)
                                ret += '<span>' +
                                    '<a class="btn-sm delete-btn" class=""><i class="fa fa-trash delete-btn" ></i></a>' +
                                    '</span>';



                            return ret;

                            /*

                           +'<span>' +
                                    '<a class="btn-sm delete-btn" class=""><i class="fa fa-trash delete-btn" ></i></a>' +
                                    '</span>';
                                    */
                        }
                    }
                ],
                columnDefs: [
                ],
                "language": {
                    "sEmptyTable": "Nessun dato presente nella tabella",
                    "sInfo": "Vista da _START_ a _END_ di _TOTAL_ elementi",
                    "sInfoEmpty": "Vista da 0 a 0 di 0 elementi",
                    "sInfoFiltered": "(filtrati da _MAX_ elementi totali)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "Visualizza _MENU_ elementi",
                    "sLoadingRecords": "Caricamento...",
                    "sProcessing": "Elaborazione...",
                    "sSearch": "Cerca:",
                    "sZeroRecords": "La ricerca non ha portato alcun risultato.",
                    "oPaginate": {
                        "sFirst": "Inizio",
                        "sPrevious": "Precedente",
                        "sNext": "Successivo",
                        "sLast": "Fine"
                    },
                    "oAria": {
                        "sSortAscending": ": attiva per ordinare la colonna in ordine crescente",
                        "sSortDescending": ": attiva per ordinare la colonna in ordine decrescente"
                    }
                },
                "autoWidth": false,
                "responsive": true,
                orderCellsTop: true,
                fixedHeader: true
            });




            $('table').on('click', '.delete-btn', function () {
                let rrr = this;
                let rowData = $('table').DataTable().row($(this).closest('tr')).data();

                $.ajax({
                    url: '/Mansione/ajaxRemoveMansione?idMansione=' + rowData.id,
                    type: 'get',
                    success: function (data) {
                        let row = table.row($(rrr).parents('tr'));

                        row.remove();

                        table.draw();
                    }
                });

            });

        });
    </script>
}
