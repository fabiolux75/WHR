@model LoocERP.Models.ResourceRequest

<div class="modal fade" id="modalResourceRequest_create" role="dialog">
    <div class="modal-dialog  modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Crea Richiesta risorsa</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <form asp-controller="ResourceRequest" asp-action="create">
                    <div class="form-group">
                        <div class="col-sm-12 col-12">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Mansione</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Specializzazione</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Cantiere</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                                    <div class="form-group">
                                        <label>Seleziona Macchina</label>
                                        <div class="form-group">
                                            <select style="width:100%" class="form-control" name="IdMansione" id="mansione_select2"></select>
                                        </div>
                                    </div>
                                    <div class="form-group" id="macchinaSelect">
                                        <label>Seleziona Macchina</label>
                                        <div class="form-group">
                                            <select style="width:100%" class="form-control" name="IdMansione" id="macchinaSelect_select2"></select>
                                        </div>
                                    </div>

                                </div>
                                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <div class="form-group">
                                        <label>Seleziona Macchina</label>
                                        <div class="form-group">
                                            <select style="width:100%" class="form-control" name="IdMansione" id="specializzazione_select2"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                    <div class="form-group">
                                        <label>Seleziona Macchina</label>
                                        <div class="form-group">
                                            <select style="width:100%" class="form-control" name="IdMansione" id="cantiere_select2"></select>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary">Crea Richiesta</button>
                </form>
            </div>
        </div>
    </div>
</div>



<script>
    function openModalResourceRequestCreate() {
        var empModal = $('#modalResourceRequest_create');
        $("#macchinaSelect").hide();

        $('#specializzazione_select2').select2({
            placeholder: "Inserisci nome Macchina",
            minimumInputLength: 1,
            dropdownParent: $("#modalResourceRequest_create"),
            ajax: {
                url: '/ResourceRequest/ajaxSpecializzazioniList',
                dataType: 'json',

            },
        });

        $('#cantiere_select2').select2({
            placeholder: "Inserisci nome Macchina",
            minimumInputLength: 1,
            dropdownParent: $("#modalResourceRequest_create"),
            ajax: {
                url: '/ResourceRequest/ajaxCantiereList',
                dataType: 'json',

            },
        });

        $('#mansione_select2').select2({
            placeholder: "Inserisci nome Macchina",
            minimumInputLength: 1,
            dropdownParent: $("#modalResourceRequest_create"),
            ajax: {
                url: '/ResourceRequest/ajaxMansioniList',
                dataType: 'json',

            },
        });





        empModal.modal('show');
    }






    $("#mansione_select2").change(function () {

        $("#macchinaSelect").show();

        var val = this.value;
        $('#macchinaSelect_select2').select2({
            placeholder: "Inserisci nome Macchina",
            minimumInputLength: 1,
            dropdownParent: $("#modalResourceRequest_create"),
            ajax: {
                url: '/ResourceRequest/ajaxMacchineList?idMansione=' + val,
                dataType: 'json',

            },
        });

    });



</script>